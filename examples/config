nonzero = r'[1-9]'
letter = r'[a-zA-Z]'
digit = fr'(?:0|{nonzero})'
alphanum = rf'(?:{letter}|{digit}|_)'
character = rf'(?:{alphanum}| )'
fractnum = rf'[.](?:0|{digit}*{nonzero})'
intnum = rf'(?:{nonzero}{digit}*|0)'
floatnum = rf'{intnum}{fractnum}(?:e[+\-]?{intnum})?'

reserved = {
            'if',
            'then',
            'else',
            'integer',
            'float',
            'string',
            'void',
            'public',
            'private',
            'func',
            'var',
            'class',
            'while',
            'read',
            'write',
            'return',
            'main',
            'inherits',
            'break',
            'continue'
            }

tokens = [
    ('id', rf'{letter}{alphanum}*'),
    ('floatnum', floatnum),
    ('intnum', intnum),
    ('stringlit', rf'"{character}*"'),
    ('inline_comment', r'//.*'),
    ('block_comment', r'/\*(?:.|\s)*?\*/'),
    ('lf', r'\n'),
    ('skip', r'[ \t]+'),
    ('coloncolon', '::'),
    ('noteq', '<>'),
    ('eq', '=='),
    ('geq', '>='),
    ('leq', '<='),
    ('opencubr', r'\{'),
    ('closecubr', r'\}'),
    ('colon', r':'),
    ('assign', '='),
    ('minus', r'\-'),
    ('plus', r'\+'),
    ('or', r'\|'),
    ('openpar', r'\('),
    ('closepar', r'\)'),
    ('opensqbr', r'\['),
    ('div', '/'),
    ('mult', r'\*'),
    ('qmark', r'\?'),
    ('and', '&'),
    ('closesqbr', '\]'),
    ('comma', ','),
    ('lt', '<'),
    ('gt', '>'),
    ('semi', ';'),
    ('dot', '\.'),
    ('not', '!'),
    ('invalidchar', rf'.')
]
